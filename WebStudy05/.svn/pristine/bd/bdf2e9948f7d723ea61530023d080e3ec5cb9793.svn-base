<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<div class="row">
	<div class="col-lg-2 mb-0 order-0">
		<div class="card bg-menu-theme sub-side-menu" style="height: 82vh">
			<div class="d-flex row">
				<div class="card-header d-grid">
					<div class="header-main mb-3"> 
						<span>캘린더</span>
					</div>
					<button class="btn btn-primary btn-compose" data-btn-location="/calendar/user/input">일정등록</button>
				</div>
				<div id="layout-menu" class="card-body row menu menu-vertical inner-sub-menu">
					<ul class="menu-inner">
						<li class="menu-item active" sytle="width:100%">
							<a href='<c:url value="/calendar/user"/>' class="menu-link">
								<div class="sub-side-div">개인 일정</div>
							</a>
						</li>
						<li class="menu-item" sytle="width:100%">
							<a href='<c:url value="/calendar/user/team"/>' class="menu-link">
								<div class="sub-side-div">팀 일정</div>
							</a>
						</li>
						<li class="menu-item" sytle="width:100%">
							<a href='<c:url value="/calendar/user/company"/>' class="menu-link">
								<div class="sub-side-div">전사 일정</div>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-10 col-md-0" >
		<div class="row">
			<div class="col col-md-12 col-6" >
				<div class="card">
					<div id="inner-card-body" class="card-body" style="height: 82vh">
						<div class="mb-2">
							<input type="checkbox" class="form-check-input calendar-box" data-cal-who="E">
							<label class="form-check-label">내 일정</label>
							&nbsp
							<c:forEach items="${dptList }" var="dpt" varStatus="status">
								<input type="checkbox" class="form-check-input calendar-box" data-cal-who="D${status.count }">
								<label class="form-check-label  ">${dpt}</label>
								&nbsp
							</c:forEach>
							<input type="checkbox" class="form-check-input calendar-box" data-cal-who="C">
							<label class="form-check-label  ">전사 일정</label>
						</div>
						<div style="height: 74vh">
							<div id="calendar" class="h-100"> </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>